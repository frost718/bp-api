{
  "DeviceInformation": {
    "title": "Firmware/PCB Versions and Serial Numbers, Manufacturing Date and Calibration Data",
    "type": "object",
    "required": [
      "versionFw",
      "versionPcb",
      "serialDevice",
      "serialPcb",
      "dateManifac",
      "dateCalib",
      "intervalCalibration"
    ],
    "properties": {
      "versionFw": {
        "$ref": "#/components/schemas/versionFw"
      },
      "versionPcb": {
        "$ref": "#/components/schemas/uint"
      },
      "serialDevice": {
        "title": "TODO: Bluetooth serial?",
        "type": "string"
      },
      "serialPcb": {
        "title": "serial number of the pcb board",
        "type": "string",
        "pattern": "^V[0-9]{10}$"
      },
      "dateManifac": {
        "$ref": "#/components/schemas/dateTimeISO8601"
      },
      "dateCalib": {
        "$ref": "#/components/schemas/dateTimeISO8601"
      },
      "intervalCalibration": {
        "$ref": "#/components/schemas/uint"
      }
    }
  }
}